<?xml version="1.0"?>
<config>
    <modules>
        <Loewenstark_Bcrypt>
            <version>0.0.0.1</version>
        </Loewenstark_Bcrypt>
    </modules>
    <global>
        <helpers>
            <ldsbcrypt>
                <class>Loewenstark_Bcrypt_Helper</class>
            </ldsbcrypt>
        </helpers>
        <models>
            <ldsbcrypt>
                <class>Loewenstark_Bcrypt_Model</class>
            </ldsbcrypt>
            <customer>
                <rewrite>
                    <customer>Loewenstark_Bcrypt_Model_Customer_Customer</customer>
                </rewrite>
            </customer>
            <admin>
                <rewrite>
                    <user>Loewenstark_Bcrypt_Model_Admin_User</user>
                </rewrite>
            </admin>
        </models>
    </global>
    <frontend>
        <routers>
            <customer>
                <args>
                    <modules>
                        <ldsbcrypt before="Mage_Customer">Loewenstark_Bcrypt_Customer</ldsbcrypt>
                    </modules>
                </args>
            </customer>
        </routers>
    </frontend>
</config>